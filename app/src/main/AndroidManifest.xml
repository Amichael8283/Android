<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="org.michaelbel.moviemade">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.BODY_SENSORS"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="com.android.vending.BILLING"/>
    <uses-permission android:name="com.samsung.permission.SSENSOR"/>

    <application
        android:name=".Moviemade"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:icon="@mipmap/ic_launcher_round"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:allowBackup="true"
        android:fullBackupContent="true">

        <!--AdMob-->
        <meta-data android:name="com.google.android.gms.ads.APPLICATION_ID" android:value="@string/ad_app_id"/>

        <!--FIXME user orientation-->
        <activity android:name=".ui.modules.main.MainActivity" android:screenOrientation="user" android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
                <category android:name="android.intent.category.MULTIWINDOW_LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <!--Authorization callback URL looks like this: moviemade://main-->
                <data android:host="main" android:scheme="moviemade"/>
            </intent-filter>
        </activity>

        <!--FIXME user orientation-->
        <activity
            android:name=".ui.modules.movie.MovieActivity"
            android:screenOrientation="user">
            <!--<intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="https" android:host="www.themoviedb.org" android:pathPrefix="/movie/"/>
                <data android:scheme="https" android:host="www.themoviedb.org" android:pathPrefix="/movie"/>
            </intent-filter>-->
        </activity>

        <!--FIXME user orientation-->
        <activity android:name=".ui.modules.trailers.TrailersActivity" android:screenOrientation="user" />
        <activity android:name=".ui.modules.reviews.activity.ReviewsActivity" android:screenOrientation="user" />
        <activity android:name=".ui.modules.reviews.activity.ReviewActivity" android:screenOrientation="user" />
        <activity android:name=".ui.modules.search.SearchActivity" android:screenOrientation="user" android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".ui.modules.favorites.FavoriteActivity" android:screenOrientation="user"/>
        <activity android:name=".ui.modules.keywords.activity.KeywordsActivity" android:screenOrientation="user"/>
        <activity android:name=".ui.modules.keywords.activity.KeywordActivity" android:screenOrientation="user"/>
        <activity android:name=".ui.modules.watchlist.WatchlistActivity" android:screenOrientation="user"/>
        <activity android:name=".ui.modules.similar.SimilarMoviesActivity" android:screenOrientation="user"/>
        <activity android:name=".ui.modules.recommendations.RcmdMoviesActivity" android:screenOrientation="user"/>

        <activity android:name=".ui.modules.settings.SettingsActivity"/>
        <activity android:name=".ui.modules.about.AboutActivity"/>

    </application>

</manifest>