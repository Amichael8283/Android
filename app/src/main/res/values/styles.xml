<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Text-->

    <style name="TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="TextAppearance.Regular">
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="TextAppearance.Regular.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Regular.16.PrimaryColor">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Regular.16.SecondaryColor">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Regular.18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Regular.18.PrimaryColor">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Regular.18.SecondaryColor">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Regular.18.AccentColor">
        <item name="android:textColor">?android:colorAccent</item>
    </style>

    <style name="TextAppearance.Italic">
        <item name="android:fontFamily">@font/open_sans_italic</item>
    </style>

    <style name="TextAppearance.Italic.18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Medium">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="TextAppearance.Medium.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Medium.16.PrimaryColor">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Medium.18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Medium.18.PrimaryColor">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Bold">
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="TextAppearance.Bold.24">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.Bold.24.PrimaryColor">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <!--Button-->

    <style name="OutlinedButton.LowerCase" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--Toolbar-->

    <style name="ToolbarTitleAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="fontFamily">@font/open_sans_semibold</item>
    </style>






    <style name="Widget.Moviemade.Card" parent="Widget.MaterialComponents.CardView">
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="cardBackgroundColor">@color/foregroundColor</item>
    </style>

    <style name="SearchView">
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">text</item>
        <item name="android:typeface">normal</item>
        <item name="android:background">@null</item>
        <item name="android:hint">@string/search</item>
        <item name="android:imeOptions">actionSearch|flagNoExtractUi</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textColorHint">?android:attr/textColorHint</item>
    </style>

    <style name="Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/tmdbPrimary</item>
    </style>

    <style name="DialtactsSearchBarThemeOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>