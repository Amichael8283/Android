<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Moviemade.Card" parent="Widget.MaterialComponents.CardView">
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="cardBackgroundColor">@color/foregroundColor</item>
    </style>

    <style name="SearchView">
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">text</item>
        <item name="android:typeface">normal</item>
        <item name="android:background">@null</item>
        <item name="android:hint">@string/search</item>
        <item name="android:imeOptions">actionSearch|flagNoExtractUi</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textColorHint">?android:attr/textColorHint</item>
    </style>

    <style name="Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/tmdbPrimary</item>
    </style>

</resources>