<resources>
    <!--Launcher-->
    <style name="AppTheme.Launcher" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/preview_window</item>
    </style>

    <!--Base Theme-->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!--Colors-->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:statusBarColor">?colorPrimaryDark</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:listDivider">@color/dividerColor</item>
        <item name="android:divider">@color/dividerColor</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:shadowColor">@color/shadowColor</item>
        <!--Styles-->
        <item name="switchStyle">@style/Widget.Moviemade.Switch</item>
        <item name="materialCardViewStyle">@style/Widget.Moviemade.Card</item>

        <item name="android:windowLightStatusBar">false</item><!--Fixme: override res in values-v23-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
    </style>

    <!--MainActivity Theme-->
    <style name="AppTheme.TransparentStatusBar" parent="AppTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--CardView-->
    <style name="Widget.Moviemade.Card" parent="Widget.MaterialComponents.CardView">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cardBackgroundColor">@color/foregroundColor</item>
    </style>

    <!--SwitchCompat-->
    <style name="Widget.Moviemade.Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorControlActivated">?colorAccent</item>
    </style>

    <style name="SearchView">
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionSearch|flagNoExtractUi</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:hint">@string/search</item>
        <item name="android:typeface">normal</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textColorHint">?android:attr/textColorHint</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="ToolbarSubtitle">
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/tmdbPrimary</item>
    </style>

</resources>